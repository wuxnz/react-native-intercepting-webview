{
  "extends": "./tsconfig",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "./lib/typescript",
    "skipLibCheck": true,
    "types": ["react"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "example",
    "lib",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
